{
  "name": "phishing-simulation-server",
  "version": "0.0.1",
  "description": "A NestJS template project",
  "author": "Yotam Ziv",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "npx @biomejs/biome format --write",
    "start": "cross-env NODE_ENV=development nest start --builder swc",
    "start:dev": "cross-env NODE_ENV=development nest start --builder swc --watch",
    "start:debug": "nest start --builder swc --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "npx @biomejs/biome lint",
    "check": "npx @biomejs/biome check",
    "check:write": "npx @biomejs/biome check --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "compodoc:generate": "npx @compodoc/compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.6",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.6",
    "@nestjs/platform-express": "^11.0.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nest-elastic-logger": "^2.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@biomejs/biome": "1.9.4",
    "@compodoc/compodoc": "^1.1.26",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.6",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.11",
    "@swc/jest": "^0.2.37",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
